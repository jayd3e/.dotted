mkdir ~/Environments
mkdir ~/Environments/tmp
mkdir ~/Environments/opt
cd ~/Environments/tmp
wget http://www.python.org/ftp/python/2.7/Python-2.7.tgz
wget http://zlib.net/zlib-1.2.5.tar.gz
tar xvzf ~/Environments/tmp/Python-2.7.tgz
tar xvzf ~/Environments/tmp/zlib-1.2.5.tar.gz
cd ~/Environments/tmp/Python-2.7
./configure --prefix=$HOME/Environments/opt/Python-2.7 --with-zlib=$HOME/Environments/zlib-1.2.5
make; make install
cd ~/Environments/tmp
wget http://peak.telecommunity.com/dist/ez_setup.py
~/Environments/opt/Python-2.7/bin/python ~/Environments/tmp/ez_setup.py
~/Environments/opt/Python-2.7/bin/easy_install virtualenv
~/Environments/opt/Python-2.7/bin/virtualenv --no-site-packages ~/Environments/env2.7
~/Environments/opt/Python-2.7/bin/easy_install pyramid

