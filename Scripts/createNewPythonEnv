VER=2.5

if [ -f /usr/bin/virtualenv ] 
then 
  echo Virtualenv is install, now continue. 
else
  cd ~/Downloads
  wget http://pypi.python.org/packages/source/v/virtualenv/virtualenv-1.6.1.tar.gz#md5=1a475df2219457b6b4febb9fe595d915
  tar xzvf virtualenv-1.6.1.tar.gz
  python2 virtualenv-1.6.1/setup.py install
fi

cd ~/Environments/tmp
wget http://www.python.org/ftp/python/$VER/Python-$VER.tgz
tar xvzf ~/Environments/tmp/Python-$VER.tgz
cd ~/Environments/tmp/Python-$VER
./configure --prefix=$HOME/Environments/opt/Python-$VER --with-zlib=$HOME/Environments/zlib-1.2.5
make; make install
/usr/bin/virtualenv --python=$HOME/Environments/opt/Python-$VER/bin/python --no-site-packages ~/Environments/env$VER
