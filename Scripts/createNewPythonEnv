#You have to install virtualenv through pip before running this script.
cd ~/Downloads
wget http://pypi.python.org/packages/source/v/virtualenv/virtualenv-1.6.1.tar.gz#md5=1a475df2219457b6b4febb9fe595d915
tar xzvf virtualenv-1.6.1.tar.gz
python2 virtualenv-1.6.1/setup.py install
cd ~/Environments/tmp
wget http://www.python.org/ftp/python/3.2/Python-3.2.tgz
tar xvzf ~/Environments/tmp/Python-3.2.tgz
cd ~/Environments/tmp/Python-3.2
./configure --prefix=$HOME/Environments/opt/Python-3.2 --with-zlib=$HOME/Environments/zlib-1.2.5
make; make install
/usr/bin/virtualenv --python=$HOME/Environments/opt/Python-3.2/bin/python3 --no-site-packages ~/Environments/env3.2
