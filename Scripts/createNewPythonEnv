cd ~/Environments/tmp
wget http://www.python.org/ftp/python/3.2/Python-3.2.tgz
tar xvzf ~/Environments/tmp/Python-3.2.tgz
cd ~/Environments/tmp/Python-3.2
./configure --prefix=$HOME/Environments/opt/Python-3.2 --with-zlib=$HOME/Environments/zlib-1.2.5
make; make install
cd ~/Environments/tmp
wget http://peak.telecommunity.com/dist/ez_setup.py
~/Environments/opt/Python-3.2/bin/python3 ~/Environments/tmp/ez_setup.py
~/Environments/opt/Python-3.2/bin/easy_install virtualenv
~/Environments/opt/Python-3.2/bin/virtualenv --no-site-packages ~/Environments/env3.2
